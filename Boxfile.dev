global:
  env:
    - ENV: production
web1:
  php_version: 5.4.14
  document_root: public
  php_extensions:
    - intl
    - zip
    - mcrypt
    - mbstring
    - pdo_mysql
    - redis
    - zip
    - xcache
    - gd
  php_session_save_handler: redis
  php_session_save_path: "tcp://tunnel.pagodabox.com:6379"
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/logs
    - app/storage/meta
    - app/storage/sessions
    - app/storage/views
  after_build:
    - composer update
  before_deploy:
    ##Â SI canvis en la base de dades - "php artisan migrate:rollback"
    ## SI canvis en la base de dades - "php artisan migrate"
    ## SI canvis en la base de dades - "php artisan db:seed"
  after_deploy:
    - "php artisan cache:clear"
    - "rm -f app/storage/views/*"
cache1:
  type: redis